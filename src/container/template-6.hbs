


    <header class="header">
        <div class="">
        {{> logo}}
        </div>

        <nav class="header_nav">
            <div class="header_nav_right">
            {{>nav list=header}}
            </div>
        </nav>
    </header>

<main class="main">
    {{#with info}}
<div class="info_block">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_text">{{description}}</p>
</div>
{{/with}}

{{#with form}}
<form class="form">

    <div class="form_input_list">
        {{#each inputs}}
        <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" 
        class="form_input" id="form-input-{{id}}">
        {{/each}}
    </div>

    <div class="form_checkbox">
        <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
        <div></div>
        <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>

    {{!-- <div><hr></div> --}}
    <p class="form_info">{{info}}</p>
</form>
{{/with}}
</main>

{{#with updates}}
<div class="updates">
    <h2 class="updates_title">{{title}}</h2>
    
    {{#each list}}
        <div class="updates_list">
           <img src="https://picsum.photos/32/32" alt="image"
            class="updates_img">
            <div class="updates_info">
             <strong class="updates_name">@{{nickname}}</strong>
            <p class="updates_text">{{description}}</p>
            </div>
            
        </div>
    {{/each}}
    <div class="show_all">
    <a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a></div>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience_block">
    <h1 class="expirience_title">{{title}}</h1>
    <span class="expirience_badge">{{badge}}</span>
<div class="expirience">
    {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
    {{/each}}
</div>
</div>
{{/with}}


<footer class="footer">
    <div>
            {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
            {{#each footer}}
            <div>
                <span class="footer_title"> {{title}}</span>
                {{>nav list=links isVertical=true}}
            </div>
            {{/each}}
</footer>

